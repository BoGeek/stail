{
  "name": "stail",
  "version": "0.4.2",
  "packageManager": "yarn@3.1.1",
  "license": "MIT",
  "private": true,
  "description": "Use TailwindCSS styled components",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepublish": "in-publish && npm run dist || echo 'Bad mode'",
    "clean": "rm -rf packages/*/dist",
    "dist": "yarn workspaces foreach -v run build",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "update-refs": "workspaces-to-typescript-project-references --includesRoot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoGeek/stail.git"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "styled-components",
    "styled",
    "emotion"
  ],
  "author": "Alex Grand <alex@granted.name>",
  "devDependencies": {
    "@jest/globals": "^27.2.5",
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.7.4",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.29",
    "@types/tailwindcss": "^2.2.1",
    "in-publish": "^2.0.1",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": "*",
    "tailwindcss": "*"
  }
}
