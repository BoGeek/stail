{
  "name": "stail",
  "version": "1.0.0-alpha.1",
  "packageManager": "yarn@4.0.0-rc.6",
  "license": "MIT",
  "private": true,
  "description": "Use TailwindCSS styled components",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepublish": "in-publish && npm run dist || echo 'Bad mode'",
    "clean": "rm -rf packages/*/dist",
    "dist": "yarn workspaces foreach -v run build",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "update-refs": "workspaces-to-typescript-project-references --includesRoot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoGeek/stail.git"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "styled-components",
    "styled",
    "emotion"
  ],
  "author": "Alex Grand <alex@granted.name>",
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@jest/globals": "^28.1.0",
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.8.1",
    "@testing-library/react": "^13.2.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^27.5.1",
    "@types/react": "^18.0.9",
    "@types/tailwindcss": "^3.0.10",
    "babel-jest": "^28.1.0",
    "in-publish": "^2.0.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "typescript": "rc"
  },
  "peerDependencies": {
    "react": "*",
    "tailwindcss": "*"
  }
}
